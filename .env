# Kafka & Spark environment variables

# Kafka topic to produce and consume from
KAFKA_TOPIC=events

# Message rate per second for the producer
MSGS_PER_SEC=5

# Kafka broker (used internally within Docker)
KAFKA_BOOTSTRAP_SERVERS=kafka:9092

# Output path for Spark Parquet sink (inside container)
OUTPUT_PATH=/opt/spark-output/parquet

# How often Spark writes files (bigger interval => fewer files)
TRIGGER_SECONDS=30

# Cap rows per output file
MAX_RECORDS_PER_FILE=5000

# Files per day partition per micro-batch (1 = ~single file)
FILES_PER_PARTITION=1
